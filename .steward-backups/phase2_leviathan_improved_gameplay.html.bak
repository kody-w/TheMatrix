        #missions-panel {
            right: 20px;
            bottom: 20px;
            border: 2px solid #ffff00;
            min-width: 300px;
            max-width: 350px;
            max-height: 300px;
            overflow-y: auto;
        }

        .panel-title {
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .info-section {

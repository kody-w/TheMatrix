    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
        // ==================== AUDIO SYSTEM ====================
        let audioContext;
        let masterGain, musicGain, sfxGain, ambientGain;
        let analyser;
        let audioEnabled = true;

        const audioState = {
            masterVolume: 0.7,
            musicVolume: 0.6,
            sfxVolume: 0.8,
            ambientVolume: 0.5,
            musicOscillators: [],
            ambientOscillators: [],
            spectrumData: new Uint8Array(256)
        };

        function initAudio() {
            if (audioContext) return;

            audioContext = new (window.AudioContext || window.webkitAudioContext)();

            // Create gain nodes for volume control
            masterGain = audioContext.createGain();
            masterGain.gain.value = audioState.masterVolume;
            masterGain.connect(audioContext.destination);

            musicGain = audioContext.createGain();
            musicGain.gain.value = audioState.musicVolume;
            musicGain.connect(masterGain);

            sfxGain = audioContext.createGain();
            sfxGain.gain.value = audioState.sfxVolume;
            sfxGain.connect(masterGain);

            ambientGain = audioContext.createGain();
            ambientGain.gain.value = audioState.ambientVolume;
            ambientGain.connect(masterGain);

            // Create analyser for visualization
            analyser = audioContext.createAnalyser();
            analyser.fftSize = 256;
            masterGain.connect(analyser);

            console.log('Audio system initialized');
        }

        // ==================== PROCEDURAL MUSIC GENERATION ====================
        function generateGalaxyAmbience() {
            if (!audioContext || !audioEnabled) return;

            // Generate layered ambient space music
            const now = audioContext.currentTime;

            // Drone layer - low, sustained frequencies
            const droneFrequencies = [55, 82, 110]; // Low notes
            droneFrequencies.forEach((freq, index) => {
                const osc = audioContext.createOscillator();
                osc.type = 'sine';
                osc.frequency.value = freq;
                osc.frequency.setValueCurveAtTime(
                    [freq, freq * 0.95, freq],
                    now,
                    8 // 8 second cycle
                );

                const gain = audioContext.createGain();
                gain.gain.setValueCurveAtTime(
                    [0.08, 0.12, 0.08],
                    now,
                    8
                );

                osc.connect(gain);
                gain.connect(musicGain);

                osc.start(now);
                setTimeout(() => osc.stop(), 8100);

                audioState.musicOscillators.push(osc);
            });

            // Melodic layer - wandering melody
            const melodyFrequencies = [262, 294, 330, 349, 392]; // C, D, E, F, G
            const melodySequence = [0, 2, 1, 3, 2, 4, 3, 2];

            melodySequence.forEach((noteIndex, stepIndex) => {
                const stepTime = now + (stepIndex * 0.5);
                const osc = audioContext.createOscillator();
                osc.type = 'triangle';
                osc.frequency.value = melodyFrequencies[noteIndex];

                const gain = audioContext.createGain();
                gain.gain.setValueCurveAtTime(
                    [0, 0.06, 0],
                    stepTime,
                    0.4
                );

                osc.connect(gain);
                gain.connect(musicGain);

                osc.start(stepTime);
                osc.stop(stepTime + 0.4);

                audioState.musicOscillators.push(osc);
            });
        }

        function generatePlanetAmbience() {
            if (!audioContext || !audioEnabled) return;

            // Different atmosphere - slightly higher energy
            const now = audioContext.currentTime;

            // Harmonic layers specific to planet surface
            const baseFreq = 165; // E3
            const harmonics = [1, 2, 3, 5];

            harmonics.forEach((harmonic, index) => {
                const freq = baseFreq * harmonic;
                const osc = audioContext.createOscillator();
                osc.type = 'sine';
                osc.frequency.value = freq;

                const gain = audioContext.createGain();
                const gainValue = 0.15 / (index + 1);
                gain.gain.setValueCurveAtTime(
                    [gainValue, gainValue * 1.2, gainValue],
                    now,
                    6
                );

                osc.connect(gain);
                gain.connect(musicGain);

                osc.start(now);
                setTimeout(() => osc.stop(), 6100);

                audioState.musicOscillators.push(osc);
            });
        }

        function generateAmbientNoise() {
            if (!audioContext || !audioEnabled) return;

            const now = audioContext.currentTime;
            const bufferSize = audioContext.sampleRate * 2;
            const buffer = audioContext.createBuffer(1, bufferSize, audioContext.sampleRate);
            const data = buffer.getChannelData(0);

            // Generate low-frequency noise
            for (let i = 0; i < bufferSize; i++) {
                data[i] = Math.random() * 2 - 1;
            }

            const source = audioContext.createBufferSource();
            source.buffer = buffer;
            source.loop = true;
            source.loopStart = 0;
            source.loopEnd = buffer.duration;

            // Filter to low frequencies
            const filter = audioContext.createBiquadFilter();
            filter.type = 'lowpass';
            filter.frequency.value = 200;
            filter.Q.value = 1;

            const gain = audioContext.createGain();
            gain.gain.value = 0.05;

            source.connect(filter);
            filter.connect(gain);
            gain.connect(ambientGain);

            source.start(now);
            audioState.ambientOscillators.push(source);
        }

        // ==================== SOUND EFFECTS ====================
        function playCivilizationSelectSound(civilization) {
            if (!audioContext || !audioEnabled) return;

            const now = audioContext.currentTime;

            // Use color to generate frequency
            const hue = civilization.color.getHSL().h; // 0-1
            const baseFreq = 200 + (hue * 400); // 200-600 Hz

            // Three-note ascending chord
            const notes = [baseFreq, baseFreq * 1.25, baseFreq * 1.5];

            notes.forEach((freq, index) => {
                const osc = audioContext.createOscillator();
                osc.type = 'sine';
                osc.frequency.value = freq;

                const gain = audioContext.createGain();
                const noteStart = now + (index * 0.1);
                gain.gain.setValueCurveAtTime(
                    [0, 0.15, 0],
                    noteStart,
                    0.15
                );

                osc.connect(gain);
                gain.connect(sfxGain);

                osc.start(noteStart);
                osc.stop(noteStart + 0.15);
            });
        }

        function playLandingSound() {
            if (!audioContext || !audioEnabled) return;

            const now = audioContext.currentTime;

            // Descending frequency sweep
            const osc = audioContext.createOscillator();
            osc.type = 'square';
            osc.frequency.setValueCurveAtTime(
                [800, 400, 200, 100],
                now,
                0.5
            );

            const gain = audioContext.createGain();
            gain.gain.setValueCurveAtTime(
                [0.2, 0.15, 0.08, 0],
                now,
                0.5
            );

            osc.connect(gain);
            gain.connect(sfxGain);

            osc.start(now);
            osc.stop(now + 0.5);
        }

        function playAscendingSound() {
            if (!audioContext || !audioEnabled) return;

            const now = audioContext.currentTime;

            // Ascending frequency sweep
            const osc = audioContext.createOscillator();
            osc.type = 'triangle';
            osc.frequency.setValueCurveAtTime(
                [200, 400, 600, 800],
                now,
                0.4
            );

            const gain = audioContext.createGain();
            gain.gain.setValueCurveAtTime(
                [0, 0.15, 0.15, 0],
                now,
                0.4
            );

            osc.connect(gain);
            gain.connect(sfxGain);

            osc.start(now);
            osc.stop(now + 0.4);
        }

        function playEventSound(eventType) {
            if (!audioContext || !audioEnabled) return;

            const now = audioContext.currentTime;

            switch(eventType) {
                case 'explosion':
                    // Deep, resonant burst
                    const oscExp = audioContext.createOscillator();
                    oscExp.type = 'sawtooth';
                    oscExp.frequency.setValueCurveAtTime([150, 50, 0], now, 0.3);

                    const gainExp = audioContext.createGain();
                    gainExp.gain.setValueCurveAtTime([0.2, 0.1, 0], now, 0.3);

                    oscExp.connect(gainExp);
                    gainExp.connect(sfxGain);

                    oscExp.start(now);
                    oscExp.stop(now + 0.3);
                    break;

                case 'discovery':
                    // Ascending melodic flourish
                    const frequencies = [330, 440, 550, 660, 440];
                    frequencies.forEach((freq, index) => {
                        const osc = audioContext.createOscillator();
                        osc.type = 'sine';
                        osc.frequency.value = freq;

                        const gain = audioContext.createGain();
                        const noteStart = now + (index * 0.08);
                        gain.gain.setValueCurveAtTime([0, 0.12, 0], noteStart, 0.08);

                        osc.connect(gain);
                        gain.connect(sfxGain);

                        osc.start(noteStart);
                        osc.stop(noteStart + 0.08);
                    });
                    break;

                case 'decline':
                    // Descending minor chord
                    const minorFreqs = [392, 330, 264, 220]; // G, E, C, A
                    minorFreqs.forEach((freq, index) => {
                        const osc = audioContext.createOscillator();
                        osc.type = 'triangle';
                        osc.frequency.value = freq;

                        const gain = audioContext.createGain();
                        const noteStart = now + (index * 0.1);
                        gain.gain.setValueCurveAtTime([0, 0.08, 0], noteStart, 0.1);

                        osc.connect(gain);
                        gain.connect(sfxGain);

                        osc.start(noteStart);
                        osc.stop(noteStart + 0.1);
                    });
                    break;
            }
        }

        function playTimeSpeedSound(speed) {
            if (!audioContext || !audioEnabled) return;

            const now = audioContext.currentTime;
            const baseFreq = 440;
            const freq = baseFreq + (speed * 100);

            const osc = audioContext.createOscillator();
            osc.type = 'sine';
            osc.frequency.value = freq;

            const gain = audioContext.createGain();
            gain.gain.setValueCurveAtTime([0, 0.1, 0], now, 0.2);

            osc.connect(gain);
            gain.connect(sfxGain);

            osc.start(now);
            osc.stop(now + 0.2);
        }

        // ==================== CIVILIZATION AUDIO SIGNATURES ====================
        function generateCivilizationSignature(civilization) {
            if (!audioContext || !audioEnabled) return;

            const now = audioContext.currentTime;

            // Map civilization properties to audio signature
            const hue = civilization.color.getHSL().h;
            const techLevel = civilization.techLevel;
            const population = civilization.population;

            // Base frequency from hue
            const baseFreq = 200 + (hue * 600);

            // Modify based on tech level (higher tech = more harmonics)
            const harmonicCount = Math.ceil(techLevel / 2);

            // Generate radio signal-like sound
            for (let i = 1; i <= harmonicCount; i++) {
                const freq = baseFreq * (i * 0.5 + 0.5);
                const osc = audioContext.createOscillator();
                osc.type = i % 2 === 0 ? 'sine' : 'triangle';
                osc.frequency.value = freq;

                const gain = audioContext.createGain();
                gain.gain.value = (0.1 / i) * (civilization.alive ? 1 : 0.5);

                osc.connect(gain);
                gain.connect(ambientGain);

                osc.start(now);
                setTimeout(() => osc.stop(), 1000);

                audioState.ambientOscillators.push(osc);
            }
        }

        // ==================== VISUALIZATION ====================
        function updateSpectrumVisualization() {
            const canvas = document.getElementById('spectrumCanvas');
            if (!canvas || !analyser) return;

            const ctx = canvas.getContext('2d');
            analyser.getByteFrequencyData(audioState.spectrumData);

            ctx.fillStyle = '#0a0a1a';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            const barWidth = canvas.width / audioState.spectrumData.length;
            let x = 0;

            // Draw spectrum bars with cyan color
            ctx.fillStyle = '#00ffff';
            for (let i = 0; i < audioState.spectrumData.length; i++) {
                const barHeight = (audioState.spectrumData[i] / 255) * canvas.height;
                ctx.fillRect(x, canvas.height - barHeight, barWidth - 1, barHeight);
                x += barWidth;
            }

            // Update waveform indicator
            const indicator = document.getElementById('waveformIndicator');
            if (indicator) {
                const avgValue = audioState.spectrumData.reduce((a, b) => a + b) / audioState.spectrumData.length;
                const level = Math.floor((avgValue / 255) * 14);
                const bars = ['‚ñÅ', '‚ñÇ', '‚ñÉ', '‚ñÑ', '‚ñÖ', '‚ñÜ', '‚ñá', '‚ñà'];
                const waveform = bars.map((_, i) => i < level ? '‚ñà' : '‚ñÅ').join('');
                indicator.textContent = waveform;
            }
        }

        // ==================== AUDIO CONTROL HANDLERS ====================
        function initAudioControls() {
            const masterToggle = document.getElementById('masterToggle');
            const musicToggle = document.getElementById('musicToggle');
            const sfxToggle = document.getElementById('sfxToggle');
            const ambientToggle = document.getElementById('ambientToggle');

            const masterVolume = document.getElementById('masterVolume');
            const musicVolume = document.getElementById('musicVolume');
            const sfxVolume = document.getElementById('sfxVolume');
            const ambientVolume = document.getElementById('ambientVolume');


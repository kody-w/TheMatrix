    <!-- Controls Panel -->
    <div class="ui-panel" id="controls-panel">
        <div class="panel-title">üéÆ Controls</div>
        <div class="info-section">
            <div><strong>Galaxy Mode:</strong></div>
            <div>WASD: Move forward/back/left/right</div>
